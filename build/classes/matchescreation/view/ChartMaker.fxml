<AnchorPane id="AnchorPane" prefHeight="505.0" prefWidth="700.0" stylesheets="@ChartMakerLayout.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matchescreation.view.ChartMakerController">
    <children>
      <ScrollPane prefHeight="231.0" prefWidth="700.0">
         <content>
            <VBox id="chartBox" fx:id="chartBox" />
         </content>
      </ScrollPane>
      <HBox fx:id="box" layoutY="280.0" prefHeight="100.0" prefWidth="273.0">
         <children>
            <Button id="button-generate" mnemonicParsing="false" onAction="#handleButtonAction" text="generate" />
            <TextField fx:id="athletesNo" prefHeight="31.0" prefWidth="94.0" text="4" />
         </children></HBox>
      <AnchorPane fx:id="currentMatch" layoutY="394.0" prefHeight="69.0" prefWidth="700.0">
         <children>
            <Label fx:id="currentShiro" layoutX="14.0" layoutY="17.0" minWidth="300.0" prefHeight="36.0" prefWidth="300.0" text="shiro">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="currentAka" alignment="CENTER_RIGHT" layoutX="386.0" layoutY="17.0" minWidth="300.0" prefHeight="36.0" prefWidth="300.0" text="aka">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="currentShiroClub" layoutX="14.0" layoutY="51.0" minWidth="300.0" prefHeight="36.0" prefWidth="300.0" text="shiro club" textFill="#515151" />
            <Label fx:id="currentAkaClub" alignment="CENTER_RIGHT" layoutX="386.0" layoutY="51.0" minWidth="300.0" prefHeight="36.0" prefWidth="300.0" text="aka club" textFill="#515151" />
            <Button id="shiroBtn" fx:id="shiroBtn" layoutX="254.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleShiroBtnAction" prefHeight="60.0" prefWidth="60.0" />
            <Button id="akaBtn" fx:id="akaBtn" layoutX="386.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleAkaBtnAction" prefHeight="60.0" prefWidth="60.0" />
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
